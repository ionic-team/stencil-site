{
  "extends": "@tsconfig/docusaurus/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./lib/.tsbuildinfo-client",
    "rootDir": "src",
    "outDir": "lib",
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/nprogress.ts",
    "src/prism-include-languages.ts",
    "src/theme",
    "src/*.d.ts"
, "types.d.ts"  ],
  "exclude": ["**/__tests__/**"]
}
